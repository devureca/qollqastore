---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import ProductCard from "../components/ProductCard.astro";
import ProductModal from "../components/ProductModal.astro";
import OfertasSlider from "../components/OfertasSlider.astro";
import Reviews from "../components/Reviews.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import { getProducts, getConfig, getSlides, getReviews } from "../lib/sheet";

const config = await getConfig();
const products = await getProducts();
const slides = await getSlides();
const reviews = await getReviews();

const novedades = products
	.filter((p) => p.novedad?.toLowerCase() === "si")
	.slice(0, 3);
const ofertas = products.filter((p) => p.precio_oferta).slice(0, 4);
const catalogo = products
	.filter((p) => p.disponible?.toLowerCase() !== "no")
	.sort(() => Math.random() - 0.5)
	.slice(0, 8);
---

<Layout title={config.nombre} color={config.color_primario}>
	<Navbar config={config} />

	<Hero slides={slides} />

	<!-- Novedades -->
	{
		novedades.length > 0 && (
			<div id="novedades" class="max-w-7xl mx-auto px-[5%] py-16">
				<h2 style="font-family: var(--font-display); font-size: clamp(2rem, 4vw, 3rem); letter-spacing: 0.05em; color: var(--text);">
					NOVEDADES
				</h2>
				<p class="text-sm mb-8 mt-1" style="color: var(--text-muted);">
					Lo recién llegado
				</p>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
					{novedades.map((product) => (
						<ProductCard product={product} config={config} />
					))}
				</div>
			</div>
		)
	}

	<OfertasSlider products={products} config={config} />

	<!-- Catálogo random -->
	<div class="max-w-7xl mx-auto px-[5%] py-16">
		<h2
			style="font-family: var(--font-display); font-size: clamp(2rem, 4vw, 3rem); letter-spacing: 0.05em; color: var(--text);"
		>
			CATÁLOGO
		</h2>
		<p class="text-sm mb-8 mt-1" style="color: var(--text-muted);">
			Explorá todo el stock
		</p>
		<div class="grid grid-cols-2 md:grid-cols-4 gap-6">
			{
				catalogo.map((product) => (
					<ProductCard product={product} config={config} />
				))
			}

			<!-- Card ver catálogo completo -->
			<a
				href="/catalogo"
				class="rounded-2xl flex flex-col items-center justify-center gap-3 border-2 border-dashed transition-all duration-200 min-h-[300px]"
				style="border-color: var(--border);"
				onmouseenter="this.style.borderColor='var(--color-primary)'; this.querySelector('p').style.color='var(--color-primary)'"
				onmouseleave="this.style.borderColor='var(--border)'; this.querySelector('p').style.color='var(--text-muted)'"
			>
				<span class="text-4xl" style="color: var(--text-muted);">→</span
				>
				<p
					class="font-bold text-sm text-center px-4 transition-colors duration-200"
					style="color: var(--text-muted);"
				>
					Ver catálogo completo
				</p>
			</a>
		</div>
	</div>

	{reviews.length > 0 && <Reviews reviews={reviews} />}

	<Footer config={config} />

	<WhatsAppButton whatsapp={config.whatsapp} />

	<!-- Modal -->
	<ProductModal />

	<script define:vars={{ moneda: config.moneda }}>
		const PRIMARY = getComputedStyle(document.documentElement)
			.getPropertyValue("--color-primary")
			.trim();

		document.querySelectorAll(".product-card").forEach((card) => {
			card.addEventListener("click", () => {
				const data = JSON.parse(
					card.getAttribute("data-product") || "{}",
				);
				window.__openModal(data, moneda, PRIMARY);
			});
		});
	</script>
</Layout>
