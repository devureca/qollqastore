---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import ProductCard from "../components/ProductCard.astro";
import ProductModal from "../components/ProductModal.astro";
import { getProducts, getConfig, getSlides, getReviews } from "../lib/sheet";

const config = await getConfig();
const products = await getProducts();
const slides = await getSlides();
const reviews = await getReviews();

const novedades = products
	.filter((p) => p.novedad?.toLowerCase() === "si")
	.slice(0, 4);
const ofertas = products.filter((p) => p.precio_oferta).slice(0, 4);
const catalogo = products
	.filter((p) => p.disponible?.toLowerCase() !== "no")
	.sort(() => Math.random() - 0.5)
	.slice(0, 8);
---

<Layout title={config.nombre} color={config.color_primario}>
	<Navbar config={config} />

	<Hero slides={slides} />

	<!-- Novedades -->
	{
		novedades.length > 0 && (
			<div id="novedades" class="max-w-7xl mx-auto px-[5%] py-16">
				<h2 style="font-family: var(--font-display); font-size: clamp(2rem, 4vw, 3rem); letter-spacing: 0.05em; color: var(--text);">
					NOVEDADES
				</h2>
				<p class="text-sm mb-8 mt-1" style="color: var(--text-muted);">
					Lo recién llegado
				</p>
				<div class="grid grid-cols-2 md:grid-cols-4 gap-6">
					{novedades.map((product) => (
						<ProductCard product={product} config={config} />
					))}
				</div>
			</div>
		)
	}

	<!-- Ofertas -->
	{
		ofertas.length > 0 && (
			<div
				id="ofertas"
				class="py-16"
				style="background: var(--bg-secondary);"
			>
				<div class="max-w-7xl mx-auto px-[5%]">
					<h2 style="font-family: var(--font-display); font-size: clamp(2rem, 4vw, 3rem); letter-spacing: 0.05em; color: var(--text);">
						OFERTAS
					</h2>
					<p
						class="text-sm mb-8 mt-1"
						style="color: var(--text-muted);"
					>
						No te lo pierdas
					</p>
					<div class="grid grid-cols-2 md:grid-cols-4 gap-6">
						{ofertas.map((product) => (
							<ProductCard product={product} config={config} />
						))}
					</div>
				</div>
			</div>
		)
	}

	<!-- Catálogo random -->
	<div class="max-w-7xl mx-auto px-[5%] py-16">
		<h2
			style="font-family: var(--font-display); font-size: clamp(2rem, 4vw, 3rem); letter-spacing: 0.05em; color: var(--text);"
		>
			CATÁLOGO
		</h2>
		<p class="text-sm mb-8 mt-1" style="color: var(--text-muted);">
			Explorá todo el stock
		</p>
		<div class="grid grid-cols-2 md:grid-cols-4 gap-6">
			{
				catalogo.map((product) => (
					<ProductCard product={product} config={config} />
				))
			}

			<!-- Card ver catálogo completo -->
			<a
				href="/catalogo"
				class="rounded-2xl flex flex-col items-center justify-center gap-3 border-2 border-dashed transition-all duration-200 min-h-[300px]"
				style="border-color: var(--border);"
				onmouseenter="this.style.borderColor='var(--color-primary)'; this.querySelector('p').style.color='var(--color-primary)'"
				onmouseleave="this.style.borderColor='var(--border)'; this.querySelector('p').style.color='var(--text-muted)'"
			>
				<span class="text-4xl" style="color: var(--text-muted);">→</span
				>
				<p
					class="font-bold text-sm text-center px-4 transition-colors duration-200"
					style="color: var(--text-muted);"
				>
					Ver catálogo completo
				</p>
			</a>
		</div>
	</div>

	<!-- Reseñas -->
	{
		reviews.length > 0 && (
			<div class="py-16" style="background: var(--bg-secondary);">
				<div class="max-w-7xl mx-auto px-[5%]">
					<h2 style="font-family: var(--font-display); font-size: clamp(2rem, 4vw, 3rem); letter-spacing: 0.05em; color: var(--text);">
						CLIENTES FELICES
					</h2>
					<p
						class="text-sm mb-8 mt-1"
						style="color: var(--text-muted);"
					>
						Lo que dicen de nosotros
					</p>
					<div class="flex flex-col">
						{reviews.map((review, i) => (
							<div
								class={`py-6 grid grid-cols-1 md:grid-cols-[200px_1fr] gap-6 items-center ${i < reviews.length - 1 ? "border-b" : ""}`}
								style="border-color: var(--border);"
							>
								<div class="flex items-center gap-3">
									<div
										class="w-11 h-11 rounded-full flex items-center justify-center shrink-0 text-white"
										style="background: var(--color-primary); font-family: var(--font-display); font-size: 1.2rem;"
									>
										{review.nombre.charAt(0).toUpperCase()}
									</div>
									<div>
										<p
											class="font-bold text-sm"
											style="color: var(--text);"
										>
											{review.nombre}
										</p>
										<p
											class="text-sm"
											style="color: #f59e0b;"
										>
											{"★".repeat(
												Number(review.estrellas),
											)}
										</p>
									</div>
								</div>
								<p
									class="text-sm leading-relaxed"
									style="color: var(--text-muted);"
								>
									"{review.texto}"
								</p>
							</div>
						))}
					</div>
				</div>
			</div>
		)
	}

	<!-- Footer -->
	<footer class="py-8 text-center" style="background: #0d0d0d;">
		<p class="text-xs" style="color: rgba(255,255,255,0.3);">
			© {new Date().getFullYear()}
			{config.nombre} · Powered by
			<span class="font-bold" style="color: var(--color-primary);"
				>QollqaStore</span
			>
		</p>
	</footer>

	<!-- Modal -->
	<ProductModal />

	<!-- WhatsApp flotante -->
	{
		config.whatsapp && (
			<a
				href={`https://wa.me/${config.whatsapp}`}
				target="_blank"
				class="fixed bottom-6 right-6 w-14 h-14 rounded-full flex items-center justify-center z-40 transition-transform duration-200 hover:scale-110"
				style="background: #25D366; box-shadow: 0 4px 16px rgba(37,211,102,0.4);"
				aria-label="WhatsApp"
			>
				<svg width="28" height="28" viewBox="0 0 24 24" fill="#fff">
					<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
				</svg>
			</a>
		)
	}

	<script define:vars={{ moneda: config.moneda }}>
		const PRIMARY = getComputedStyle(document.documentElement)
			.getPropertyValue("--color-primary")
			.trim();

		document.querySelectorAll(".product-card").forEach((card) => {
			card.addEventListener("click", () => {
				const data = JSON.parse(
					card.getAttribute("data-product") || "{}",
				);
				window.__openModal(data, moneda, PRIMARY);
			});
		});
	</script>
</Layout>
